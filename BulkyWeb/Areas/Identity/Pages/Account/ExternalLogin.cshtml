@page
@model ExternalLoginModel
@{
    ViewData["Title"] = "Register";
}

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-10">
            <div class="card mt-4 mb-5 shadow">
                <div class="card-header bg-success bg-gradient text-white py-3">
                    <h2 class="text-white mb-0 text-center">
                        <i class="bi bi-person-plus"></i> @ViewData["Title"]
                    </h2>
                </div>
                <div class="card-body p-4">
                    <h4 class="text-center mb-3">Associate your @Model.ProviderDisplayName account</h4>
                    <p class="text-info text-center mb-4">
                        <i class="bi bi-check-circle"></i> You've successfully authenticated with <strong>@Model.ProviderDisplayName</strong>.
                        Please fill in the required information below to complete your registration.
                    </p>
                    <hr />

                    <form asp-page-handler="Confirmation" asp-route-returnUrl="@Model.ReturnUrl" method="post">
                        <div asp-validation-summary="ModelOnly" class="text-danger mb-3" role="alert"></div>

                        <div class="row">
                            <!-- Left Column -->
                            <div class="col-md-6">
                                <h5 class="text-primary mb-3"><i class="bi bi-person-circle"></i> Account Information</h5>

                                <div class="form-floating mb-3">
                                    <input asp-for="Input.Email" class="form-control" autocomplete="email" placeholder="Email" />
                                    <label asp-for="Input.Email">Email</label>
                                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                                </div>

                                <div class="form-floating mb-3">
                                    <input asp-for="Input.Name" class="form-control" placeholder="Full Name" />
                                    <label asp-for="Input.Name">Name</label>
                                    <span asp-validation-for="Input.Name" class="text-danger"></span>
                                </div>

                                <div class="form-floating mb-3">
                                    <input asp-for="Input.PhoneNumber" class="form-control" type="tel" placeholder="Phone Number" />
                                    <label asp-for="Input.PhoneNumber">Phone Number</label>
                                    <span asp-validation-for="Input.PhoneNumber" class="text-danger"></span>
                                </div>
                            </div>

                            <!-- Right Column -->
                            <div class="col-md-6">
                                <h5 class="text-primary mb-3"><i class="bi bi-geo-alt"></i> Address Information (Optional)</h5>

                                <div class="form-floating mb-3">
                                    <input asp-for="Input.StreetAddress" class="form-control" placeholder="Street Address" />
                                    <label asp-for="Input.StreetAddress">Street Address</label>
                                    <span asp-validation-for="Input.StreetAddress" class="text-danger"></span>
                                </div>

                                <div class="form-floating mb-3">
                                    <input asp-for="Input.City" class="form-control" placeholder="City" />
                                    <label asp-for="Input.City">City</label>
                                    <span asp-validation-for="Input.City" class="text-danger"></span>
                                </div>

                                <div class="form-floating mb-3">
                                    <input asp-for="Input.State" class="form-control" placeholder="State" />
                                    <label asp-for="Input.State">State</label>
                                    <span asp-validation-for="Input.State" class="text-danger"></span>
                                </div>

                                <div class="form-floating mb-3">
                                    <input asp-for="Input.PostalCode" class="form-control" placeholder="Postal Code" />
                                    <label asp-for="Input.PostalCode">Postal Code</label>
                                    <span asp-validation-for="Input.PostalCode" class="text-danger"></span>
                                </div>

                                <div class="alert alert-info">
                                    <i class="bi bi-info-circle"></i>
                                    <strong>Note:</strong> Address fields are optional. You can update them later from your profile.
                                </div>
                            </div>
                        </div>

                        <hr class="my-4" />

                        <div class="row">
                            <div class="col-md-6 offset-md-3">
                                <button type="submit" class="w-100 btn btn-lg btn-success">
                                    <i class="bi bi-person-plus"></i> Complete Registration
                                </button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
