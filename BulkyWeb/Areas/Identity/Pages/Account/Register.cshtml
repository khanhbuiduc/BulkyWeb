@page
@model RegisterModel
@{
    ViewData["Title"] = "Register";
}

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-10">
            <div class="card mt-4 mb-5 shadow">
                <div class="card-header bg-primary bg-gradient text-white py-3">
                    <h2 class="text-white mb-0 text-center">
                        <i class="bi bi-person-plus"></i> @ViewData["Title"]
                    </h2>
                </div>
                <div class="card-body p-4">
                    <form id="registerForm" asp-route-returnUrl="@Model.ReturnUrl" method="post">
                        <h4 class="mb-3 text-center">Create a new account</h4>
                        <hr />
                        <div asp-validation-summary="ModelOnly" class="text-danger mb-3" role="alert"></div>
                        
                        <div class="row">
                            <!-- Left Column -->
                            <div class="col-md-6">
                                <h5 class="text-primary mb-3"><i class="bi bi-person-circle"></i> Account Information</h5>
                                
                                <div class="form-floating mb-3">
                                    <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" placeholder="name@example.com" />
                                    <label asp-for="Input.Email">Email</label>
                                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                                </div>
                                
                                <div class="form-floating mb-3">
                                    <input asp-for="Input.Name" class="form-control" aria-required="true" placeholder="Full Name" />
                                    <label asp-for="Input.Name">Name</label>
                                    <span asp-validation-for="Input.Name" class="text-danger"></span>
                                </div>
                                
                                <div class="form-floating mb-3">
                                    <input asp-for="Input.PhoneNumber" class="form-control" type="tel" placeholder="Phone Number" />
                                    <label asp-for="Input.PhoneNumber">Phone Number</label>
                                    <span asp-validation-for="Input.PhoneNumber" class="text-danger"></span>
                                </div>
                                
                                <div class="form-floating mb-3">
                                    <input asp-for="Input.Password" class="form-control" autocomplete="new-password" aria-required="true" placeholder="password" />
                                    <label asp-for="Input.Password">Password</label>
                                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                                </div>
                                
                                <div class="form-floating mb-3">
                                    <input asp-for="Input.ConfirmPassword" class="form-control" autocomplete="new-password" aria-required="true" placeholder="password" />
                                    <label asp-for="Input.ConfirmPassword">Confirm Password</label>
                                    <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
                                </div>
                                
                                <div class="form-floating mb-3">
                                    <select asp-for="Input.Role" asp-items="@Model.RoleList" class="form-select">
                                        <option disabled selected>-- Select Role --</option>
                                    </select>
                                    <label asp-for="Input.Role">Role</label>
                                    <span asp-validation-for="Input.Role" class="text-danger"></span>
                                </div>
                                
                                <div class="form-floating mb-3">
                                    <select asp-for="Input.CompanyId" asp-items="@Model.CompanyList" class="form-select">
                                        <option disabled selected>-- Select Company --</option>
                                    </select>
                                    <label asp-for="Input.CompanyId">Company</label>
                                    <span asp-validation-for="Input.CompanyId" class="text-danger"></span>
                                </div>
                            </div>
                            
                            <!-- Right Column -->
                            <div class="col-md-6">
                                <h5 class="text-primary mb-3"><i class="bi bi-geo-alt"></i> Address Information</h5>
                                
                                <div class="form-floating mb-3">
                                    <input asp-for="Input.StreetAddress" class="form-control" placeholder="Street Address" />
                                    <label asp-for="Input.StreetAddress">Street Address</label>
                                    <span asp-validation-for="Input.StreetAddress" class="text-danger"></span>
                                </div>
                                
                                <div class="form-floating mb-3">
                                    <input asp-for="Input.City" class="form-control" placeholder="City" />
                                    <label asp-for="Input.City">City</label>
                                    <span asp-validation-for="Input.City" class="text-danger"></span>
                                </div>
                                
                                <div class="form-floating mb-3">
                                    <input asp-for="Input.State" class="form-control" placeholder="State" />
                                    <label asp-for="Input.State">State</label>
                                    <span asp-validation-for="Input.State" class="text-danger"></span>
                                </div>
                                
                                <div class="form-floating mb-3">
                                    <input asp-for="Input.PostalCode" class="form-control" placeholder="Postal Code" />
                                    <label asp-for="Input.PostalCode">Postal Code</label>
                                    <span asp-validation-for="Input.PostalCode" class="text-danger"></span>
                                </div>
                                
                                <div class="alert alert-info mt-4">
                                    <i class="bi bi-info-circle"></i>
                                    <strong>Note:</strong> Address fields are optional. You can fill them in later from your profile.
                                </div>
                            </div>
                        </div>
                        
                        <hr class="my-4" />
                        
                        <div class="row">
                            <div class="col-md-6 offset-md-3">
                                <div class="mb-3">
                                    <button id="registerSubmit" type="submit" class="w-100 btn btn-lg btn-success">
                                        <i class="bi bi-person-plus"></i> Register
                                    </button>
                                </div>
                                <div class="text-center">
                                    <p class="mb-0">Already have an account?</p>
                                    <a asp-page="./Login" asp-route-returnUrl="@Model.ReturnUrl" class="text-decoration-none">
                                        <i class="bi bi-box-arrow-in-right"></i> Login here
                                    </a>
                                </div>
                            </div>
                        </div>
                    </form>
                    
                    @if ((Model.ExternalLogins?.Count ?? 0) > 0)
                    {
                        <hr class="my-4" />
                        <div class="row">
                            <div class="col-md-6 offset-md-3">
                                <h5 class="text-center mb-3">Or register using</h5>
                                <form id="external-account" asp-page="./ExternalLogin" asp-route-returnUrl="@Model.ReturnUrl" method="post">
                                    @foreach (var provider in Model.ExternalLogins!)
                                    {
                                        <button type="submit" class="btn btn-outline-success mb-2 w-100" name="provider" value="@provider.Name" title="Register using your @provider.DisplayName account">
                                            <i class="bi bi-box-arrow-in-right"></i> @provider.DisplayName
                                        </button>
                                    }
                                </form>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        $(document).ready(function () {
            // Hide company dropdown initially
            $('#Input_CompanyId').closest('.form-floating').hide();
            
            // Show/hide company dropdown based on role selection
            $('#Input_Role').change(function () {
                var selectedRole = $(this).val();
                if (selectedRole === 'Company') {
                    $('#Input_CompanyId').closest('.form-floating').show();
                } else {
                    $('#Input_CompanyId').closest('.form-floating').hide();
                    $('#Input_CompanyId').val('');
                }
            });
            
            // Check initial value on page load
            var initialRole = $('#Input_Role').val();
            if (initialRole === 'Company') {
                $('#Input_CompanyId').closest('.form-floating').show();
            }
        });
    </script>
}
