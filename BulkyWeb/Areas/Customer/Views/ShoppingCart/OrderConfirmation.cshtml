@model int

@{
    ViewData["Title"] = "Order Confirmation";
}

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow border-0">
                <div class="card-body text-center p-5">
                    <div class="mb-4">
                        <i class="bi bi-check-circle-fill text-success" style="font-size: 5rem;"></i>
                    </div>
                    
                    <h1 class="text-success mb-3">
                        <i class="bi bi-check2-all me-2"></i>
                        Order Placed Successfully!
                    </h1>
                    
                    <div class="alert alert-success" role="alert">
                        <h4 class="alert-heading">Thank you for your order!</h4>
                        <hr>
                        <p class="mb-0">
                            Your order has been successfully placed and is being processed.
                        </p>
                    </div>

                    <div class="card bg-light border-0 my-4">
                        <div class="card-body">
                            <h5 class="card-title text-primary mb-3">
                                <i class="bi bi-receipt me-2"></i>
                                Order Details
                            </h5>
                            <div class="row">
                                <div class="col-6 text-start">
                                    <strong>Order Number:</strong>
                                </div>
                                <div class="col-6 text-end">
                                    <span class="badge bg-primary">#@Model</span>
                                </div>
                            </div>
                            <hr />
                            <div class="row">
                                <div class="col-6 text-start">
                                    <strong>Order Date:</strong>
                                </div>
                                <div class="col-6 text-end">
                                    @DateTime.Now.ToString("MMM dd, yyyy")
                                </div>
                            </div>
                            <hr />
                            <div class="row">
                                <div class="col-6 text-start">
                                    <strong>Status:</strong>
                                </div>
                                <div class="col-6 text-end">
                                    <span class="badge bg-success">Approved</span>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="alert alert-info" role="alert">
                        <i class="bi bi-info-circle me-2"></i>
                        <strong>Company Account:</strong> Your payment will be processed according to your company's payment terms.
                        <br />
                        <small>Payment Status: <span class="badge bg-warning text-dark">Approved for Delayed Payment</span></small>
                    </div>

                    <p class="text-muted mb-4">
                        You will receive an email confirmation shortly with your order details.
                        <br />
                        We will notify you when your order is shipped.
                    </p>

                    <div class="row mt-4">
                        <div class="col-md-6 mb-2">
                            <a asp-controller="Home" asp-action="Index" class="btn btn-outline-primary w-100">
                                <i class="bi bi-house-door me-2"></i>
                                Continue Shopping
                            </a>
                        </div>
                        <div class="col-md-6 mb-2">
                            <a asp-controller="Order" asp-action="Index" class="btn btn-primary w-100">
                                <i class="bi bi-list-ul me-2"></i>
                                View My Orders
                            </a>
                        </div>
                    </div>
                </div>
            </div>

            <div class="card mt-4 border-0 bg-light">
                <div class="card-body">
                    <h5 class="card-title text-center mb-3">
                        <i class="bi bi-question-circle me-2"></i>
                        What's Next?
                    </h5>
                    <div class="row">
                        <div class="col-md-4 text-center mb-3">
                            <i class="bi bi-box-seam text-primary" style="font-size: 2rem;"></i>
                            <h6 class="mt-2">Order Processing</h6>
                            <small class="text-muted">We're preparing your order</small>
                        </div>
                        <div class="col-md-4 text-center mb-3">
                            <i class="bi bi-truck text-primary" style="font-size: 2rem;"></i>
                            <h6 class="mt-2">Shipping</h6>
                            <small class="text-muted">You'll receive tracking info</small>
                        </div>
                        <div class="col-md-4 text-center mb-3">
                            <i class="bi bi-gift text-primary" style="font-size: 2rem;"></i>
                            <h6 class="mt-2">Delivery</h6>
                            <small class="text-muted">Enjoy your products!</small>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
