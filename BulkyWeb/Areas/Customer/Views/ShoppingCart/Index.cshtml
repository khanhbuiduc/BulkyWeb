@model ShoppingCartVM

<div class="container py-5">
    <div class="card shadow border-0">
        <div class="card-header bg-secondary bg-gradient text-light py-4">
            <div class="row">
                <div class="col-6">
                    <h5 class="pt-2">
                        <i class="bi bi-cart3 me-2"></i>
                        Shopping Cart
                    </h5>
                </div>
                <div class="col-6 text-end">
                    <a asp-area="Customer" asp-controller="Home" asp-action="Index" class="btn btn-outline-light btn-sm">
                        <i class="bi bi-arrow-left me-1"></i>
                        Continue Shopping
                    </a>
                </div>
            </div>
        </div>
        <div class="card-body">
            @if (Model.ShoppingCartList != null && Model.ShoppingCartList.Any())
            {
                @foreach (var item in Model.ShoppingCartList)
                {
                    <div class="row mb-3 pb-3 border-bottom">
                        <div class="col-md-2">
                            <img src="@item.Product.ImageUrl" class="rounded" width="100%" alt="@item.Product.Title" />
                        </div>
                        <div class="col-md-5">
                            <h5>@item.Product.Title</h5>
                            <p class="text-muted mb-0">by @item.Product.Author</p>
                            <p class="text-muted small">ISBN: @item.Product.ISBN</p>
                        </div>
                        <div class="col-md-2 text-center">
                            <h6 class="text-success">@((item.Price * item.Count).ToString("c"))</h6>
                            <p class="text-muted small">@item.Price.ToString("c") each</p>
                        </div>
                        <div class="col-md-2">
                            <div class="input-group mb-2">
                                <a asp-action="Minus" asp-route-cartId="@item.Id" class="btn btn-outline-secondary">
                                    <i class="bi bi-dash-circle"></i>
                                </a>
                                <input type="text" class="form-control text-center" value="@item.Count" readonly />
                                <a asp-action="Plus" asp-route-cartId="@item.Id" class="btn btn-outline-success">
                                    <i class="bi bi-plus-circle"></i>
                                </a>
                            </div>
                        </div>
                        <div class="col-md-1 text-end">
                            <a asp-action="Remove" asp-route-cartId="@item.Id" class="btn btn-danger">
                                <i class="bi bi-trash"></i>
                            </a>
                        </div>
                    </div>
                }

                <div class="row mt-4">
                    <div class="col-md-8 offset-md-4">
                        <div class="card border-0 bg-light">
                            <div class="card-body">
                                <div class="row">
                                    <div class="col-6">
                                        <h5>Order Total:</h5>
                                    </div>
                                    <div class="col-6 text-end">
                                        <h5 class="text-success">@Model.OrderHeader.OrderTotal.ToString("c")</h5>
                                    </div>
                                </div>
                                <hr />
                                <div class="row">
                                    <div class="col-12">
                                        <a asp-action="Summary" class="btn btn-success w-100 py-2">
                                            <i class="bi bi-check-circle me-2"></i>
                                            Proceed to Checkout
                                        </a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            }
            else
            {
                <div class="text-center py-5">
                    <i class="bi bi-cart-x" style="font-size: 5rem; color: #ccc;"></i>
                    <h4 class="mt-3">Your cart is empty</h4>
                    <p class="text-muted">Add some products to get started!</p>
                    <a asp-area="Customer" asp-controller="Home" asp-action="Index" class="btn btn-primary mt-3">
                        <i class="bi bi-bag me-2"></i>
                        Browse Products
                    </a>
                </div>
            }
        </div>
    </div>
</div>
