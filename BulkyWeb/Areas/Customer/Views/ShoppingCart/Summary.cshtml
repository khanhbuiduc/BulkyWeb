@model ShoppingCartVM

<form method="post">
    <input asp-for="OrderHeader.ApplicationUserId" hidden />
    <input asp-for="OrderHeader.Name" hidden />
    <input asp-for="OrderHeader.PhoneNumber" hidden />
    <input asp-for="OrderHeader.StreetAddress" hidden />
    <input asp-for="OrderHeader.City" hidden />
    <input asp-for="OrderHeader.State" hidden />
    <input asp-for="OrderHeader.PostalCode" hidden />

    <div class="container py-5">
        <div class="card shadow border-0">
            <div class="card-header bg-primary bg-gradient text-light py-4">
                <div class="row">
                    <div class="col-12 text-center">
                        <h3 class="text-white">
                            <i class="bi bi-file-earmark-text me-2"></i>
                            Order Summary
                        </h3>
                    </div>
                </div>
            </div>
            <div class="card-body">
                <div class="row">
                    <!-- Shipping Information -->
                    <div class="col-md-6 mb-4">
                        <h4 class="d-flex justify-content-between align-items-center mb-3">
                            <span class="text-primary">Shipping Information</span>
                        </h4>
                        <div class="card border-0 bg-light">
                            <div class="card-body">
                                <div class="mb-3">
                                    <label asp-for="OrderHeader.Name" class="form-label"></label>
                                    <input asp-for="OrderHeader.Name" class="form-control" readonly />
                                </div>
                                <div class="mb-3">
                                    <label asp-for="OrderHeader.PhoneNumber" class="form-label"></label>
                                    <input asp-for="OrderHeader.PhoneNumber" class="form-control" readonly />
                                </div>
                                <div class="mb-3">
                                    <label asp-for="OrderHeader.StreetAddress" class="form-label"></label>
                                    <input asp-for="OrderHeader.StreetAddress" class="form-control" readonly />
                                </div>
                                <div class="row">
                                    <div class="col-md-6 mb-3">
                                        <label asp-for="OrderHeader.City" class="form-label"></label>
                                        <input asp-for="OrderHeader.City" class="form-control" readonly />
                                    </div>
                                    <div class="col-md-6 mb-3">
                                        <label asp-for="OrderHeader.State" class="form-label"></label>
                                        <input asp-for="OrderHeader.State" class="form-control" readonly />
                                    </div>
                                </div>
                                <div class="mb-3">
                                    <label asp-for="OrderHeader.PostalCode" class="form-label"></label>
                                    <input asp-for="OrderHeader.PostalCode" class="form-control" readonly />
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Order Summary -->
                    <div class="col-md-6 mb-4">
                        <h4 class="d-flex justify-content-between align-items-center mb-3">
                            <span class="text-primary">Order Items</span>
                            <span class="badge bg-secondary rounded-pill">@Model.ShoppingCartList.Count()</span>
                        </h4>
                        <ul class="list-group mb-3">
                            @foreach (var item in Model.ShoppingCartList)
                            {
                                <li class="list-group-item d-flex justify-content-between lh-sm">
                                    <div>
                                        <h6 class="my-0">@item.Product.Title</h6>
                                        <small class="text-muted">Quantity: @item.Count</small>
                                    </div>
                                    <span class="text-muted">@((item.Price * item.Count).ToString("c"))</span>
                                </li>
                            }
                            <li class="list-group-item d-flex justify-content-between bg-light">
                                <div class="text-success">
                                    <h6 class="my-0">Promo code</h6>
                                    <small>None</small>
                                </div>
                                <span class="text-success">$0.00</span>
                            </li>
                            <li class="list-group-item d-flex justify-content-between">
                                <span><strong>Total (USD)</strong></span>
                                <strong class="text-success">@Model.OrderHeader.OrderTotal.ToString("c")</strong>
                            </li>
                        </ul>
                    </div>
                </div>

                <div class="row">
                    <div class="col-12">
                        <div class="card border-0 bg-light">
                            <div class="card-body">
                                <div class="row">
                                    <div class="col-md-6 mb-2">
                                        <a asp-action="Index" class="btn btn-outline-secondary w-100">
                                            <i class="bi bi-arrow-left me-2"></i>
                                            Back to Cart
                                        </a>
                                    </div>
                                    <div class="col-md-6 mb-2">
                                        <button type="submit" class="btn btn-success w-100">
                                            <i class="bi bi-check-circle me-2"></i>
                                            Place Order
                                        </button>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>
