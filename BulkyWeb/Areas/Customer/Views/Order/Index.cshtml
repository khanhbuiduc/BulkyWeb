@model IEnumerable<OrderHeader>

@{
    ViewData["Title"] = "My Orders";
}

<div class="container py-4">
    <div class="card shadow border-0">
        <div class="card-header bg-primary bg-gradient text-white py-3">
            <h3 class="text-white mb-0">
                <i class="bi bi-list-check me-2"></i>
                My Orders
            </h3>
        </div>
        <div class="card-body">
            @if (Model.Any())
            {
                <div class="table-responsive">
                    <table class="table table-striped table-hover">
                        <thead class="table-dark">
                            <tr>
                                <th>Order #</th>
                                <th>Order Date</th>
                                <th>Order Total</th>
                                <th>Order Status</th>
                                <th>Payment Status</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var order in Model.OrderByDescending(o => o.OrderDate))
                            {
                                <tr>
                                    <td>
                                        <span class="badge bg-primary">#@order.Id</span>
                                    </td>
                                    <td>@order.OrderDate.ToString("MMM dd, yyyy")</td>
                                    <td>@order.OrderTotal.ToString("c")</td>
                                    <td>
                                        @if (order.OrderStatus == "Approved")
                                        {
                                            <span class="badge bg-success">
                                                <i class="bi bi-check-circle me-1"></i>@order.OrderStatus
                                            </span>
                                        }
                                        else if (order.OrderStatus == "Pending")
                                        {
                                            <span class="badge bg-warning text-dark">
                                                <i class="bi bi-clock me-1"></i>@order.OrderStatus
                                            </span>
                                        }
                                        else if (order.OrderStatus == "Processing")
                                        {
                                            <span class="badge bg-info">
                                                <i class="bi bi-arrow-repeat me-1"></i>@order.OrderStatus
                                            </span>
                                        }
                                        else if (order.OrderStatus == "Shipped")
                                        {
                                            <span class="badge bg-primary">
                                                <i class="bi bi-truck me-1"></i>@order.OrderStatus
                                            </span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-secondary">@order.OrderStatus</span>
                                        }
                                    </td>
                                    <td>
                                        @if (order.PaymentStatus == "Approved")
                                        {
                                            <span class="badge bg-success">
                                                <i class="bi bi-check-circle me-1"></i>Paid
                                            </span>
                                        }
                                        else if (order.PaymentStatus == "ApprovedForDelayedPayment")
                                        {
                                            <span class="badge bg-warning text-dark">
                                                <i class="bi bi-hourglass-split me-1"></i>Delayed Payment
                                            </span>
                                        }
                                        else if (order.PaymentStatus == "Pending")
                                        {
                                            <span class="badge bg-warning text-dark">
                                                <i class="bi bi-clock me-1"></i>Pending
                                            </span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-secondary">@order.PaymentStatus</span>
                                        }
                                    </td>
                                    <td>
                                        <a asp-action="Details" asp-route-id="@order.Id" class="btn btn-sm btn-primary">
                                            <i class="bi bi-eye me-1"></i>
                                            View Details
                                        </a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
            else
            {
                <div class="text-center py-5">
                    <i class="bi bi-cart-x text-muted" style="font-size: 4rem;"></i>
                    <h4 class="text-muted mt-3">No Orders Yet</h4>
                    <p class="text-muted">You haven't placed any orders yet.</p>
                    <a asp-controller="Home" asp-action="Index" class="btn btn-primary mt-3">
                        <i class="bi bi-shop me-2"></i>
                        Start Shopping
                    </a>
                </div>
            }
        </div>
    </div>
</div>
