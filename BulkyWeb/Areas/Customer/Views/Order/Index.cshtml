@model List<OrderHeader>

<div class="container py-4">
    <div class="card shadow border-0">
        <div class="card-header bg-primary bg-gradient text-white py-3">
            <h3 class="text-white mb-0">
                <i class="bi bi-list-check me-2"></i>
                My Orders
            </h3>
        </div>
        <div class="card-body">
            <div class="d-flex justify-content-between align-items-center mb-3">
                <div>
                    <ul class="nav nav-pills">
                        <li class="nav-item">
                            <a class="nav-link active" href="javascript:void(0);" onclick="loadDataTable('all')">
                                <i class="bi bi-list-ul me-1"></i> All
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="javascript:void(0);" onclick="loadDataTable('pending')">
                                <i class="bi bi-hourglass-split me-1"></i> Pending
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="javascript:void(0);" onclick="loadDataTable('inprocess')">
                                <i class="bi bi-arrow-repeat me-1"></i> In Process
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="javascript:void(0);" onclick="loadDataTable('completed')">
                                <i class="bi bi-check-circle me-1"></i> Completed
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="javascript:void(0);" onclick="loadDataTable('approved')">
                                <i class="bi bi-check2-circle me-1"></i> Approved
                            </a>
                        </li>
                    </ul>
                </div>
            </div>
            <table id="tblData" class="table table-bordered table-striped">
                <thead>
                    <tr>
                        <th>Order ID</th>
                        <th>Order Date</th>
                        <th>Order Total</th>
                        <th>Order Status</th>
                        <th>Payment Status</th>
                        <th>Actions</th>
                    </tr>
                </thead>
            </table>
        </div>
    </div>
</div>

@section Scripts {
    <script src="~/js/customerOrder.js"></script>
}
