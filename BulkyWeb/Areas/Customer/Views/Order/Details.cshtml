@using Bulky.Utility
@model OrderVM

@{
    ViewData["Title"] = "Order Details";
}

<div class="container py-4">
    <div class="row">
        <div class="col-12">
            <div class="card shadow border-0">
                <div class="card-header bg-primary bg-gradient text-white py-3">
                    <div class="row">
                        <div class="col-md-6">
                            <h3 class="text-white mb-0">
                                <i class="bi bi-receipt me-2"></i>
                                Order Details
                            </h3>
                        </div>
                        <div class="col-md-6 text-end">
                            <span class="badge bg-light text-dark fs-6">Order #@Model.OrderHeader.Id</span>
                        </div>
                    </div>
                </div>
                <div class="card-body">
                    <div class="row mb-4">
                        <!-- Order Information -->
                        <div class="col-md-6">
                            <div class="card border-0 bg-light h-100">
                                <div class="card-body">
                                    <h5 class="card-title text-primary mb-3">
                                        <i class="bi bi-info-circle me-2"></i>
                                        Order Information
                                    </h5>
                                    <div class="row mb-2">
                                        <div class="col-5"><strong>Order Date:</strong></div>
                                        <div class="col-7">@Model.OrderHeader.OrderDate.ToString("MMM dd, yyyy hh:mm tt")</div>
                                    </div>
                                    @if (Model.OrderHeader.ShippingDate != DateTime.MinValue)
                                    {
                                        <div class="row mb-2">
                                            <div class="col-5"><strong>Shipping Date:</strong></div>
                                            <div class="col-7">@Model.OrderHeader.ShippingDate.ToString("MMM dd, yyyy")</div>
                                        </div>
                                    }
                                    <div class="row mb-2">
                                        <div class="col-5"><strong>Order Status:</strong></div>
                                        <div class="col-7">
                                            @if (Model.OrderHeader.OrderStatus == SD.StatusApproved)
                                            {
                                                <span class="badge bg-success"><i class="bi bi-check-circle"></i> @Model.OrderHeader.OrderStatus</span>
                                            }
                                            else if (Model.OrderHeader.OrderStatus == SD.StatusPending)
                                            {
                                                <span class="badge bg-warning text-dark"><i class="bi bi-clock"></i> @Model.OrderHeader.OrderStatus</span>
                                            }
                                            else if (Model.OrderHeader.OrderStatus == SD.StatusInProcess)
                                            {
                                                <span class="badge bg-info"><i class="bi bi-arrow-repeat"></i> @Model.OrderHeader.OrderStatus</span>
                                            }
                                            else if (Model.OrderHeader.OrderStatus == SD.StatusShipped)
                                            {
                                                <span class="badge bg-primary"><i class="bi bi-truck"></i> @Model.OrderHeader.OrderStatus</span>
                                            }
                                            else if (Model.OrderHeader.OrderStatus == SD.StatusCancelled)
                                            {
                                                <span class="badge bg-danger"><i class="bi bi-x-circle"></i> @Model.OrderHeader.OrderStatus</span>
                                            }
                                            else
                                            {
                                                <span class="badge bg-secondary">@Model.OrderHeader.OrderStatus</span>
                                            }
                                        </div>
                                    </div>
                                    <div class="row mb-2">
                                        <div class="col-5"><strong>Payment Status:</strong></div>
                                        <div class="col-7">
                                            @if (Model.OrderHeader.PaymentStatus == SD.PaymentStatusDelayedPayment)
                                            {
                                                <span class="badge bg-warning text-dark"><i class="bi bi-hourglass-split"></i> Delayed Payment</span>
                                            }
                                            else if (Model.OrderHeader.PaymentStatus == SD.PaymentStatusApproved)
                                            {
                                                <span class="badge bg-success"><i class="bi bi-check-circle"></i> Paid</span>
                                            }
                                            else if (Model.OrderHeader.PaymentStatus == SD.PaymentStatusPending)
                                            {
                                                <span class="badge bg-warning text-dark"><i class="bi bi-clock"></i> Pending</span>
                                            }
                                            else
                                            {
                                                <span class="badge bg-secondary">@Model.OrderHeader.PaymentStatus</span>
                                            }
                                        </div>
                                    </div>
                                    @if (!string.IsNullOrEmpty(Model.OrderHeader.TrackingNumber))
                                    {
                                        <div class="row mb-2">
                                            <div class="col-5"><strong>Tracking #:</strong></div>
                                            <div class="col-7">
                                                <span class="badge bg-info">@Model.OrderHeader.TrackingNumber</span>
                                            </div>
                                        </div>
                                    }
                                    @if (!string.IsNullOrEmpty(Model.OrderHeader.Carrier))
                                    {
                                        <div class="row mb-2">
                                            <div class="col-5"><strong>Carrier:</strong></div>
                                            <div class="col-7">@Model.OrderHeader.Carrier</div>
                                        </div>
                                    }
                                    @if (Model.OrderHeader.PaymentStatus == SD.PaymentStatusDelayedPayment && Model.OrderHeader.PaymentDueDate != DateTime.MinValue)
                                    {
                                        <div class="row mb-2">
                                            <div class="col-5"><strong>Payment Due Date:</strong></div>
                                            <div class="col-7">
                                                <span class="badge bg-warning text-dark">@Model.OrderHeader.PaymentDueDate.ToString("MMM dd, yyyy")</span>
                                            </div>
                                        </div>
                                    }
                                </div>
                            </div>
                        </div>

                        <!-- Shipping Address -->
                        <div class="col-md-6">
                            <div class="card border-0 bg-light h-100">
                                <div class="card-body">
                                    <h5 class="card-title text-primary mb-3">
                                        <i class="bi bi-geo-alt me-2"></i>
                                        Shipping Address
                                    </h5>
                                    <address class="mb-3">
                                        <strong>@Model.OrderHeader.Name</strong><br />
                                        @Model.OrderHeader.StreetAddress<br />
                                        @Model.OrderHeader.City, @Model.OrderHeader.State @Model.OrderHeader.PostalCode<br />
                                        <strong>Phone:</strong> @Model.OrderHeader.PhoneNumber
                                    </address>
                                    
                                    @if (Model.OrderHeader.ApplicationUser != null)
                                    {
                                        <div class="mt-3">
                                            <strong>Email:</strong> @Model.OrderHeader.ApplicationUser.Email
                                        </div>
                                    }
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Order Items -->
                    <div class="card border-0 bg-light">
                        <div class="card-body">
                            <h5 class="card-title text-primary mb-3">
                                <i class="bi bi-box-seam me-2"></i>
                                Order Items
                            </h5>
                            <div class="table-responsive">
                                <table class="table table-hover">
                                    <thead class="table-dark">
                                        <tr>
                                            <th>Product</th>
                                            <th>Price</th>
                                            <th>Quantity</th>
                                            <th>Total</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var item in Model.OrderDetail)
                                        {
                                            <tr>
                                                <td>
                                                    <strong>@item.Product.Title</strong>
                                                    <br />
                                                    <small class="text-muted">by @item.Product.Author</small>
                                                </td>
                                                <td>@item.Price.ToString("c")</td>
                                                <td>@item.Count</td>
                                                <td><strong>@((item.Price * item.Count).ToString("c"))</strong></td>
                                            </tr>
                                        }
                                    </tbody>
                                    <tfoot>
                                        <tr class="table-active">
                                            <td colspan="3" class="text-end"><strong>Order Total:</strong></td>
                                            <td><strong class="text-success fs-5">@Model.OrderHeader.OrderTotal.ToString("c")</strong></td>
                                        </tr>
                                    </tfoot>
                                </table>
                            </div>
                        </div>
                    </div>

                    <div class="row mt-4">
                        <div class="col-12 text-center">
                            <a asp-action="Index" class="btn btn-outline-primary btn-lg">
                                <i class="bi bi-arrow-left me-2"></i>
                                Back to My Orders
                            </a>
                            <a asp-controller="Home" asp-action="Index" class="btn btn-primary btn-lg">
                                <i class="bi bi-shop me-2"></i>
                                Continue Shopping
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
