@model IEnumerable<Product>

@{
    ViewData["Title"] = "Search Results";
    var searchQuery = ViewBag.SearchQuery as string;
    var resultCount = ViewBag.ResultCount as int? ?? 0;
}

<div class="container py-4">
    <div class="row mb-4">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center">
                <div>
                    <h2 class="mb-2">
                        <i class="bi bi-search text-primary me-2"></i>
                        Search Results
                    </h2>
                    <p class="text-muted">
                        Found <strong>@resultCount</strong> result@(resultCount != 1 ? "s" : "") for 
                        <strong class="text-primary">"@searchQuery"</strong>
                    </p>
                </div>
                <div>
                    <a asp-action="Index" class="btn btn-outline-primary">
                        <i class="bi bi-arrow-left me-1"></i>
                        Back to All Products
                    </a>
                </div>
            </div>
            <hr />
        </div>
    </div>

    @if (Model.Any())
    {
        <div class="row pb-3">
            @foreach (var product in Model)
            {
                var displayImage = product.ImageUrl ?? "/images/placeholder.png";
                
                <div class="col-lg-3 col-md-4 col-sm-6 mb-4">
                    <div class="card h-100 border-0 shadow-sm hover-lift">
                        <img src="@displayImage" class="card-img-top rounded-top" alt="@product.Title" 
                             style="height: 300px; object-fit: cover;">
                        <div class="card-body p-3">
                            <div class="text-center">
                                <h5 class="fw-bold text-dark mb-2">@product.Title</h5>
                                <p class="text-muted mb-2 small">by @product.Author</p>
                                <div class="badge bg-secondary mb-2">@product.Category?.Name</div>
                                @if (product.ProductImages != null && product.ProductImages.Count > 0)
                                {
                                    <div class="mt-2">
                                        <small class="text-muted">
                                            <i class="bi bi-images"></i> @product.ProductImages.Count images
                                        </small>
                                    </div>
                                }
                            </div>
                        </div>
                        <div class="card-footer p-3 pt-0 border-top-0 bg-transparent">
                            <div class="text-center">
                                <div class="d-flex justify-content-center align-items-center mb-2">
                                    <span class="text-decoration-line-through text-muted me-2 small">@product.ListPrice.ToString("c")</span>
                                    <span class="text-danger fw-bold fs-5">@product.Price.ToString("c")</span>
                                </div>
                                <a asp-action="Details" asp-route-id="@product.Id" class="btn btn-primary w-100">
                                    <i class="bi bi-info-circle me-1"></i>
                                    View Details
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
    else
    {
        <div class="text-center py-5">
            <div class="mb-4">
                <i class="bi bi-search" style="font-size: 5rem; color: #dee2e6;"></i>
            </div>
            <h3 class="text-muted mb-3">No products found</h3>
            <p class="text-muted mb-4">
                We couldn't find any products matching "<strong>@searchQuery</strong>"
            </p>
            <div class="mb-3">
                <p class="text-muted">Try:</p>
                <ul class="list-unstyled text-muted">
                    <li><i class="bi bi-check-circle text-success me-2"></i>Checking your spelling</li>
                    <li><i class="bi bi-check-circle text-success me-2"></i>Using more general keywords</li>
                    <li><i class="bi bi-check-circle text-success me-2"></i>Searching by author or ISBN</li>
                </ul>
            </div>
            <a asp-action="Index" class="btn btn-primary btn-lg">
                <i class="bi bi-house-door me-2"></i>
                Browse All Products
            </a>
        </div>
    }
</div>

<style>
    .hover-lift {
        transition: transform 0.3s ease, box-shadow 0.3s ease;
    }

    .hover-lift:hover {
        transform: translateY(-5px);
        box-shadow: 0 0.5rem 1rem rgba(0, 0, 0, 0.15) !important;
    }
</style>
