@model IEnumerable<Product>

@{
    ViewData["Title"] = "Home Page";
}


<div class="row pb-3">
    @foreach (var product in Model)
    {
        <div class="col-lg-3 col-md-4 col-sm-6 mb-4">
            <div class="card h-100 border-0 shadow">
                <img src="@product.ImageUrl" class="card-img-top rounded" alt="@product.Title" style="height: 400px; object-fit: cover;">
                <div class="card-body p-4">
                    <div class="text-center">
                        <h5 class="fw-bolder text-dark">@product.Title</h5>
                        <p class="text-muted mb-2">by @product.Author</p>
                        <div class="badge bg-secondary mb-2">@product.Category?.Name</div>
                    </div>
                </div>
                <div class="card-footer p-4 pt-0 border-top-0 bg-transparent">
                    <div class="text-center">
                        <div class="d-flex justify-content-center align-items-center mb-2">
                            <span class="text-decoration-line-through text-muted me-2">@product.ListPrice.ToString("c")</span>
                            <span class="text-danger fw-bold fs-5">@product.Price.ToString("c")</span>
                        </div>
                        <a asp-action="Details" asp-route-id="@product.Id" class="btn btn-primary w-100">
                            <i class="bi bi-info-circle me-1"></i>
                            View Details
                        </a>
                    </div>
                </div>
            </div>
        </div>
    }
</div>

@if (!Model.Any())
{
    <div class="text-center py-5">
        <h3 class="text-muted">No products available</h3>
    </div>
}
