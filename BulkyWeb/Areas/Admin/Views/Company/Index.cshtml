@model List<Company>

<div class="card mt-4">
    <div class="card-header bg-secondary bg-gradient text-white py-3">
        <h2 class="text-white mb-0 text-center">
            <i class="bi bi-building"></i> Company List
        </h2>
    </div>
    <div class="row">
        <div class="col-12 text-end pe-4 pt-3">
            <a asp-controller="Company" asp-action="Upsert" class="btn btn-primary">
                <i class="bi bi-plus-circle"></i> Create New Company
            </a>
        </div>
    </div>
    <div class="card-body">
        <table id="tblData" class="table table-bordered table-striped">
            <thead>
                <tr>
                    <th>Company Name</th>
                    <th>City</th>
                    <th>State</th>
                    <th>Phone Number</th>
                    <th>Actions</th>
                </tr>
            </thead>
        </table>
    </div>
</div>

@section Scripts {
    <script src="~/js/company.js"></script>
}
