@model Company

<div class="card mt-4 mb-5">
    <div class="card-header bg-secondary bg-gradient text-white py-3">
        <h2 class="text-white mb-0 text-center">
            <i class="bi bi-building"></i> @(Model.Id == 0 ? "Create" : "Edit") Company
        </h2>
    </div>
    <div class="card-body p-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>
            <input asp-for="Id" hidden />
            
            <div class="row">
                <div class="col-md-6">
                    <h5 class="text-primary mb-3"><i class="bi bi-building"></i> Company Information</h5>
                    
                    <div class="mb-3">
                        <label asp-for="Name" class="form-label"></label>
                        <input asp-for="Name" type="text" class="form-control" placeholder="Enter company name" />
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>
                    
                    <div class="mb-3">
                        <label asp-for="PhoneNumber" class="form-label"></label>
                        <input asp-for="PhoneNumber" type="tel" class="form-control" placeholder="Enter phone number" />
                        <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                    </div>
                </div>
                
                <div class="col-md-6">
                    <h5 class="text-primary mb-3"><i class="bi bi-geo-alt"></i> Address Information</h5>
                    
                    <div class="mb-3">
                        <label asp-for="StreetAddress" class="form-label"></label>
                        <input asp-for="StreetAddress" type="text" class="form-control" placeholder="Enter street address" />
                        <span asp-validation-for="StreetAddress" class="text-danger"></span>
                    </div>
                    
                    <div class="mb-3">
                        <label asp-for="City" class="form-label"></label>
                        <input asp-for="City" type="text" class="form-control" placeholder="Enter city" />
                        <span asp-validation-for="City" class="text-danger"></span>
                    </div>
                </div>
            </div>
            
            <div class="row">
                <div class="col-md-6">
                    <div class="mb-3">
                        <label asp-for="State" class="form-label"></label>
                        <input asp-for="State" type="text" class="form-control" placeholder="Enter state" />
                        <span asp-validation-for="State" class="text-danger"></span>
                    </div>
                </div>
                
                <div class="col-md-6">
                    <div class="mb-3">
                        <label asp-for="PostalCode" class="form-label"></label>
                        <input asp-for="PostalCode" type="text" class="form-control" placeholder="Enter postal code" />
                        <span asp-validation-for="PostalCode" class="text-danger"></span>
                    </div>
                </div>
            </div>
            
            <hr class="my-4" />
            
            <div class="row">
                <div class="col-6 col-md-3">
                    <button type="submit" class="btn btn-primary form-control">
                        <i class="bi bi-save"></i> @(Model.Id == 0 ? "Create" : "Update")
                    </button>
                </div>
                <div class="col-6 col-md-3">
                    <a asp-controller="Company" asp-action="Index" class="btn border form-control">
                        <i class="bi bi-arrow-left"></i> Back to List
                    </a>
                </div>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
