@model Category

<div class="card mt-4">
    <div class="card-header bg-secondary bg-gradient text-white py-3">
        <h2 class="text-white mb-0 text-center">Delete Category</h2>
    </div>
    <div class="card-body">
        <form method="post">
            <input asp-for="Id" hidden />
            <div class="mb-3">
                <label asp-for="Name" class="form-label"></label>
                <input asp-for="Name" disabled type="text" class="form-control" />
            </div>
            <div class="mb-3">
                <label asp-for="DisplayOrder" class="form-label"></label>
                <input asp-for="DisplayOrder" disabled type="number" class="form-control" />
            </div>
            <div class="row">
                <div class="col-6 col-md-3">
                    <button type="submit" class="btn btn-danger form-control">Delete</button>
                </div>
                <div class="col-6 col-md-3">
                    <a asp-controller="Category" asp-action="Index" class="btn border form-control">
                        Back to List
                    </a>
                </div>
            </div>
        </form>
    </div>
</div>