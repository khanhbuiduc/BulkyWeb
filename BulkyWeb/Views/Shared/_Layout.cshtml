@using Microsoft.AspNetCore.Identity
@using Bulky.Models
@using Bulky.Utility

@inject SignInManager<IdentityUser> SignInManager
@inject UserManager<IdentityUser> UserManager

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - BulkyWeb</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/BulkyWeb.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/toastr.min.css" />
    <link rel="stylesheet" href="//cdn.datatables.net/2.3.6/css/dataTables.dataTables.min.css" />
    <link rel="stylesheet" href="https://code.jquery.com/ui/1.13.2/themes/base/jquery-ui.css">
    <script src="https://cdn.tiny.cloud/1/5yawfz9vtdd1q8y96mvd3ip1mrhecbk99ya8ff3enftl01st/tinymce/8/tinymce.min.js" referrerpolicy="origin" crossorigin="anonymous"></script>
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-dark bg-primary border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">BulkyWeb</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link" asp-area="Customer" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="Customer" asp-controller="Home" asp-action="Privacy">Privacy</a>
                        </li>
                        @if (SignInManager.IsSignedIn(User) && !User.IsInRole(SD.Role_Admin) && !User.IsInRole(SD.Role_Employee))
                        {
                            <li class="nav-item">
                                <a class="nav-link" asp-area="Customer" asp-controller="Order" asp-action="Index">
                                    <i class="bi bi-list-check me-1"></i> My Orders
                                </a>
                            </li>
                        }
                        @if (User.IsInRole(SD.Role_Admin) || User.IsInRole(SD.Role_Employee))
                        {
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                    <i class="bi bi-gear-fill me-1"></i> Management
                                </a>
                                <ul class="dropdown-menu" aria-labelledby="navbarDropdown">
                                    <li>
                                        <a class="dropdown-item" asp-area="Admin" asp-controller="Order" asp-action="Index">
                                            <i class="bi bi-list-check me-2"></i>Manage Orders
                                        </a>
                                    </li>
                                    @if (User.IsInRole(SD.Role_Admin))
                                    {
                                        <li><hr class="dropdown-divider"></li>
                                        <li class="dropdown-header">Admin Only</li>
                                        <li>
                                            <a class="dropdown-item" asp-area="Admin" asp-controller="Category" asp-action="Index">
                                                <i class="bi bi-tags me-2"></i>Categories
                                            </a>
                                        </li>
                                        <li>
                                            <a class="dropdown-item" asp-area="Admin" asp-controller="Product" asp-action="Index">
                                                <i class="bi bi-box-seam me-2"></i>Products
                                            </a>
                                        </li>
                                        <li>
                                            <a class="dropdown-item" asp-area="Admin" asp-controller="Company" asp-action="Index">
                                                <i class="bi bi-building me-2"></i>Companies
                                            </a>
                                        </li>
                                        <li>
                                            <a class="dropdown-item" asp-area="Admin" asp-controller="User" asp-action="Index">
                                                <i class="bi bi-people me-2"></i>User Management
                                            </a>
                                        </li>
                                    }
                                </ul>
                            </li>
                        }
                    </ul>
                    
                    <!-- Search Bar -->
                    <form class="d-flex mx-3" asp-area="Customer" asp-controller="Home" asp-action="Search" method="get" style="min-width: 300px;">
                        <div class="input-group">
                            <input type="text" class="form-control" id="searchInput" name="query" 
                                   placeholder="Search products..." aria-label="Search" autocomplete="off" 
                                   style="background-color: rgba(255,255,255,0.9);">
                            <button class="btn btn-light" type="submit">
                                <i class="bi bi-search"></i>
                            </button>
                        </div>
                    </form>

                    <div class="d-flex align-items-center">
                        @if (SignInManager.IsSignedIn(User))
                        {
                            @await Component.InvokeAsync("ShoppingCart")
                        }
                        <partial name="_LoginPartial" />
                    </div>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer bg-primary text-white mt-4">
        <div class="container text-center">
            &copy; 2024 - BulkyWeb - Make by  <i class="bi bi-heart-fill"></i> BuiDucKhanh
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="https://code.jquery.com/ui/1.13.2/jquery-ui.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/toastr.min.js"></script>
    <script src="//cdn.datatables.net/2.3.6/js/dataTables.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    
    <script>
        $(document).ready(function () {
            // Initialize autocomplete for search
            $("#searchInput").autocomplete({
                source: function (request, response) {
                    $.ajax({
                        url: '@Url.Action("SearchSuggestions", "Home", new { area = "Customer" })',
                        data: { term: request.term },
                        success: function (data) {
                            response($.map(data, function (item) {
                                return {
                                    label: item.label + ' - ' + item.author,
                                    value: item.value,
                                    id: item.id,
                                    imageUrl: item.imageUrl,
                                    author: item.author,
                                    price: item.price
                                };
                            }));
                        }
                    });
                },
                minLength: 2,
                select: function (event, ui) {
                    window.location.href = '@Url.Action("Details", "Home", new { area = "Customer" })/' + ui.item.id;
                    return false;
                }
            }).data("ui-autocomplete")._renderItem = function (ul, item) {
                return $("<li>")
                    .append("<div class='d-flex align-items-center p-2'>" +
                        "<img src='" + (item.imageUrl || '/images/placeholder.png') + "' style='width: 50px; height: 50px; object-fit: cover; margin-right: 10px;' />" +
                        "<div>" +
                        "<div class='fw-bold'>" + item.label + "</div>" +
                        "<small class='text-muted'>$" + item.price.toFixed(2) + "</small>" +
                        "</div>" +
                        "</div>")
                    .appendTo(ul);
            };
        });
    </script>

    @await RenderSectionAsync("Scripts", required: false)
    @if (TempData["success"] != null)
    {
        <script type="text/javascript">
            toastr.success('@TempData["success"]');
        </script>
    }
    @if (TempData["error"] != null)
    {
        <script type="text/javascript">
            toastr.error('@TempData["error"]');
        </script>
    }
</body>
</html>
